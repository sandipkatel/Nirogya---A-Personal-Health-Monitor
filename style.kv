<PredictorWindow>:
    name: "predictor"
    Screen:
        BackgroundLayout:
            id: PredictorScreen
            MDTopAppBar:
                id: topappbar
                orientation: "vertical"
                title: "Disease Predictor"
                pos_hint: {"top" : 1}
                elevation: 1
                size_hint: 1, None
                height: "56dp"  
                left_action_items:[["arrow-left", lambda x: setattr(app.root, 'current', 'home')]]
            
            MDBoxLayout:
                orientation: "vertical"
                pos_hint: {"center_x": 0.5, "y": 0.5}
                MDLabel:
                    text: "Added Symptom:"
                    pos_hint: {"center_x": 0.5, "y": 0.5}
                MDList:
                    id: symptom_list
                    size_hint: (1, None)
                    size: (root.width * 0.5, root.height * 0.4)
            BoxLayout:
                spacing: "12dp"  
                padding: "12dp"     
                MDTextField:
                    id: diseaseTextField
                    hint_text: "Add Symptom"
                    pos_hint: {"center_x": 0.75, "center_y":0.8}
                    size_hint: None, None
                    width: "240dp"
                    on_text: root.show_add_symptom_dropdown()
                    

                MDRectangleFlatButton:
                    text: "Predict"
                    background_color: 1, 0, 0, 1  # Red button
                    on_press: root.predict_disease()
                    size_hint: None, None
                    size: root.width * 0.2, root.height * 0.05
                    pos_hint: {"center_x": 0.5, "center_y": 0.8}
            MDBoxLayout:
                orientation: "vertical"
                pos_hint: {"center_x": 0.6, "y": 0.05}
                ScrollView:
                    id: disease_scroll
                    size: (root.width * 0.2, root.height * 0.3)
                    size_hint: (1, None)
                    MDLabel:
                        id: disease_label
                        text: ""
                        size_hint_y: None
                        height: self.texture_size[1]
<SymptomsWindow>:
    name: "symptoms"
    # id: symptom_window
    BackgroundLayout:
        MDTopAppBar:
            id: topappbar
            orientation: "vertical"
            title: "Disease Predictor"
            pos_hint: {"top" : 1}
            elevation: 1
            size_hint: 1, None
            height: "56dp"  
            left_action_items:[["arrow-left", lambda x: setattr(app.root, 'current', 'home')]]
        
        MDTextField:
            id: disease
            hint_text: "Enter a Disease"
            icon_right: "magnify"
            icon_right_color: app.theme_cls.primary_color
            on_text_validate: root.find_info(disease.text)
            size_hint: None, None
            size: 200, 48 
            pos_hint: {"center_x": 0.5, "center_y": 0.8}

        MDBoxLayout:
            orientation: "vertical"
            pos_hint: {"x": 0.3, "center_y": 0.67}
            ScrollView:
                id: symptoms_scroll
                size_hint: (None, None)
                size: (root.width * 0.5, root.height * 0.5)
                MDLabel:
                    id: all_info
                    text: ""
                    size_hint_y: None
                    height: self.texture_size[1]
        
<SchedulerWindow>:
    name: "scheduler"
    BackgroundLayout:
        MDRectangleFlatButton:
            text: "Back"
            background_color: 0.2, 0.2, 0.2, 1  # Dark gray button
            size_hint: None, None
            size: root.width * 0.1, root.height * 0.05
            pos_hint: {"x": 0.05, "y": 0.9}
            on_release: app.root.current = "home"

        MDBoxLayout:
            orientation: 'vertical'
            spacing: "12dp"
            size_hint_y: None
            height: "200dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDTextField:
                id: date_input
                hint_text: "Date"
                on_focus: root.show_date_picker()
                size_hint: None, None
                size: 150, 48  # Adjust the size as needed
                pos_hint: {"center_x": 0.5}
            MDTextField:
                id: time_input
                hint_text: "Time(HH:MM)"
                on_focus: root.show_time_picker()
                size_hint: None, None
                size: 150, 48  # Adjust the size as needed
                pos_hint: {"center_x": 0.5}
            MDTextField:
                id: name_input
                hint_text: "Name"
                size_hint: None, None
                size: 150, 48  # Adjust the size as needed
                pos_hint: {"center_x": 0.5}

        MDRaisedButton:
            text: "Add Appointment"
            size_hint: None, None
            size: 200, 48
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            on_release: root.show_add_appointment_popup()

        MDLabel:
            id: appointments_label
            text: 'Appointments:'
            color :0,0,1,1
            size_hint: None, None
            size: self.texture_size[0], self.texture_size[1]
            pos_hint: {"center_x": 0.5, "center_y": 0.1}


<HospitalWindow>:
    name: "hospital"
    Screen:
        RelativeLayout:
            MDTopAppBar:
                id: topappbar
                orientation: "vertical"
                title: "Hospital Nearby Me"
                pos_hint: {"top" : 1}
                elevation: 1
                size_hint: 1, None
                height: "56dp"  
                left_action_items:[["arrow-left", lambda x: setattr(app.root, 'current', 'home')]]
            
            MDScrollView:
                pos_hint: {"top": 0.9, "bottom": 0.1}
                
                MDList:
                    
                    id: hospitalList
                    spacing: dp(10)
                    size_hint: 0.75, None
                    height: root.height * 0.85

            BoxLayout:
                size_hint_y: None  
                height: "56dp"     
                pos_hint: {"bottom": 1}  
                elevation : 20
                spacing: 10
                padding: 10
                

                MDTextField:
                    mode: "fill"
                    fill_color: 0,0,0,1
                    id: search_hospital
                    hint_text: "Search by Name"
                    size_hint:None, None
                    width: "240dp"
                    on_text: root.searchHospital(0) if self.hint_text == "Search by Name" else root.searchHospital(1)
                
                MDIconButton:
                    icon: "card-search"
                    text: "Sort"
                    id: sort
                    text : "sort by name"
                    size_hint_x: None
                    on_press: root.toggleSearch()

                MDIconButton:
                    icon: "sort"
                    text: "Sort"
                    id: sort
                    text : "sort by name"
                    size_hint_x: None
                    on_press: root.show_sort_popup()



