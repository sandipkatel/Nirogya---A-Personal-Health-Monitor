
<BackgroundLayout>:
    MDLabel:
        id: background
        size_hint: 10, 10
        canvas.before:
            Color:
                rgba: 0.3, 0.3, 0.3, 1  # Light gray background
            Rectangle:
                pos: self.pos
                size: self.size

<HomeWindow>:
    name: "home"
    Screen:
        BackgroundLayout:
            orientation: "vertical"
            AsyncImage:
                source: './dependecies/Transparent_Logo.png'
                size_hint: (None, None)
                pos_hint: {"center_x": 0.1, "center_y": 0.9}
                size: root.width * 0.2, root.height * 0.2
                    
            MDGridLayout:
                cols: 1
                spacing: root.width * 0.01
                padding: root.width * 0.01
                size_hint: None, None
                size_hint_min_y: root.height * 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.7}
                MDRectangleFlatButton:
                    text: "Daily Health Matrices"
                    background_color: 0, 0, 1, 1  # Blue button
                    size_hint: None, None
                    size: root.width * 0.4, root.height * 0.1
                    pos_hint: {"center_x": 0.5}

                MDRectangleFlatButton:
                    text: "Predictor"
                    background_color: 0, 0, 1, 1  # Blue button
                    size_hint: None, None
                    size: root.width * 0.4, root.height * 0.1
                    on_release:
                        app.root.current = "predictor"
                MDRectangleFlatButton:
                    text: "Symptoms"
                    background_color: 0, 0, 1, 1  # Blue button
                    size_hint: None, None
                    size: root.width * 0.4, root.height * 0.1
                    on_release:
                        app.root.current = "symptoms"
                    
                MDRectangleFlatButton:
                    text: "Scheduler"
                    background_color: 0, 0, 1, 1  # Blue button
                    size_hint: None, None
                    size: root.width * 0.4, root.height * 0.1
                    on_release:
                        app.root.current = "scheduler"
                MDRectangleFlatButton:
                    text: "Remider"
                    background_color: 0, 0, 1, 1  # Blue button
                    size_hint: None, None
                    size: root.width * 0.4, root.height * 0.1
                MDRectangleFlatButton:
                    text: "Hospitals Nearby"
                    background_color: 0, 0, 1, 1  # Blue button
                    size_hint: None, None
                    size: root.width * 0.4, root.height * 0.1
                    on_release:
                        app.root.current = "hospital"
                MDRectangleFlatButton:
                    text: "SOS"
                    background_color: 1, 0, 0, 1  # Cyan button
                    size_hint: None, None
                    size: root.width * 0.4, root.height * 0.1

<PredictorWindow>:
    name: "predictor"
    Screen:
        BackgroundLayout:
            MDRectangleFlatButton:
                text: "Back"
                background_color: 0.2, 0.2, 0.2, 1  # Dark gray button
                size_hint: None, None
                size: root.width * 0.1, root.height * 0.05
                pos_hint: {"x": 0.05, "y": 0.9}
                on_release: app.root.current = "home"
            MDRelativeLayout:
                cols: 1
                MDBoxLayout:
                    orientation: "vertical"
                    ScrollView:
                        id: symptom_scroll
                        size_hint: (1, None)
                        size: (root.width, root.height - 200)
                        MDGridLayout:
                            id: symptom_container
                            cols: 1
                            size_hint_y: None
                            height: self.minimum_height
                MDRectangleFlatButton:
                    text: "Predict"
                    background_color: 1, 0, 0, 1  # Red button
                    on_press: root.predict_disease()
                    size_hint: None, None
                    size: root.width * 0.2, root.height * 0.1
                    pos: root.width * 0.8, root.height * 0.4
            MDLabel:
                id: disease_label
                text: ""
                size_hint_y: None
                height: dp(40)
                pos_hint: {"top": 0.9, "left": 0.1}

<SymptomsWindow>:
    name: "symptoms"
    BackgroundLayout:
        MDRectangleFlatButton:
            text: "Back"
            background_color: 0.2, 0.2, 0.2, 1  # Dark gray button
            size_hint: None, None
            size: root.width * 0.1, root.height * 0.05
            pos_hint: {"x": 0.05, "y": 0.9}
            on_release: app.root.current = "home"
        MDTextField:
            id: disease
            hint_text: "Enter a Disease Name"
            on_text_validate: root.find_symptoms(disease.text)
            size_hint: None, None
            size: 150, 48  # Adjust the size as needed
            pos_hint: {"center_x": 0.5, "center_y": 0.8}

        ScrollView:
            size_hint: (None, None)
            size: (root.width * 0.8, root.height * 0.5)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            MDLabel:
                id: symptoms
                text: ""
                size_hint_y: None
                height: self.texture_size[1]
        MDLabel:
            pos_hint: {"top": 0.9, "left": 0.1}
            size_hint_y: None
            height: dp(40)
        
<SchedulerWindow>:
    name: "scheduler"
    BackgroundLayout:
        MDRectangleFlatButton:
            text: "Back"
            background_color: 0.2, 0.2, 0.2, 1  # Dark gray button
            size_hint: None, None
            size: root.width * 0.1, root.height * 0.05
            pos_hint: {"x": 0.05, "y": 0.9}
            on_release: app.root.current = "home"

        MDBoxLayout:
            orientation: 'vertical'
            spacing: "12dp"
            size_hint_y: None
            height: "200dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDTextField:
                id: date_input
                hint_text: "Date"
                size_hint: None, None
                width: root.width*0.8
                on_focus: root.show_date_picker()
                pos_hint: {"center_x": 0.5}
            MDTextField:
                id: time_input
                size_hint: None, None
                width: root.width*0.8
                on_focus: root.show_time_picker()
                hint_text: "Time(HH:MM)"
                pos_hint: {"center_x": 0.5}
            MDTextField:
                id: name_input
                hint_text: "Name"
                size_hint: None, None
                width: root.width*0.8
                pos_hint: {"center_x": 0.5}

        MDRaisedButton:
            text: "Add Appointment"
            size_hint: None, None
            size: 200, 48
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            on_release: root.save_appointment()

        MDLabel:
            id: appointments_label
            text: 'Appointments:'
            color :0,0,1,1
            pos_hint: {"center_x": 0.86, "center_y": 0.25}


<HospitalWindow>:
    name: "hospital"
    Screen:
        MDTopAppBar:
            title: "Hospital Nearby Me"
            pos_hint: {"top": 1}
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(10)
            padding: dp(10)

            MDTextField:
                hint_text: "Search Hospital"
                icon_right: "magnify"
                icon_right_color: app.theme_cls.primary_color
                pos_hint: {"top": 1}
            
            ScrollView:
                pos_hint: {"top": 2}
                size_hint_y: None
                MDList:
                    OneLineAvatarListItem:
                        text: "Hospital Name"
                        secondary_text: "address"
                    OneLineAvatarListItem:
                        text: "Hospital Name"
                        secondary_text: "address"
