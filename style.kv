
<BackgroundLayout>:
    MDLabel:
        id: background
        size_hint: 10, 10
        canvas.before:
            Color:
                rgba: 0.3, 0.3, 0.3, 1  # Light gray background
            Rectangle:
                pos: self.pos
                size: self.size

<HomeWindow>:
    name: "home"
    Screen:
        BackgroundLayout:
            orientation: "vertical"
            AsyncImage:
                source: './dependecies/Transparent_Logo.png'
                size_hint: (None, None)
                pos_hint: {"center_x": 0.1, "center_y": 0.9}
                size: root.width * 0.2, root.height * 0.2
                    
            MDGridLayout:
                cols: 1
                spacing: root.width * 0.01
                padding: root.width * 0.01
                size_hint: None, None
                size_hint_min_y: root.height * 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.7}
                MDRectangleFlatButton:
                    text: "Daily Health Matrices"
                    background_color: 0, 0, 1, 1  # Blue button
                    size_hint: None, None
                    size: root.width * 0.4, root.height * 0.1
                    pos_hint: {"center_x": 0.5}

                MDRectangleFlatButton:
                    text: "Predictor"
                    background_color: 0, 0, 1, 1  # Blue button
                    size_hint: None, None
                    size: root.width * 0.4, root.height * 0.1
                    on_release:
                        app.root.current = "predictor"
                MDRectangleFlatButton:
                    text: "Symptoms"
                    background_color: 0, 0, 1, 1  # Blue button
                    size_hint: None, None
                    size: root.width * 0.4, root.height * 0.1
                    on_release:
                        app.root.current = "symptoms"
                    
                MDRectangleFlatButton:
                    text: "Scheduler"
                    background_color: 0, 0, 1, 1  # Blue button
                    size_hint: None, None
                    size: root.width * 0.4, root.height * 0.1
                    on_release:
                        app.root.current = "scheduler"
                MDRectangleFlatButton:
                    text: "Remider"
                    background_color: 0, 0, 1, 1  # Blue button
                    size_hint: None, None
                    size: root.width * 0.4, root.height * 0.1
                MDRectangleFlatButton:
                    text: "Hospitals Nearby"
                    background_color: 0, 0, 1, 1  # Blue button
                    size_hint: None, None
                    size: root.width * 0.4, root.height * 0.1
                    on_release:
                        app.root.current = "hospital"
                MDRectangleFlatButton:
                    text: "SOS"
                    background_color: 1, 0, 0, 1  # Cyan button
                    size_hint: None, None
                    size: root.width * 0.4, root.height * 0.1

<PredictorWindow>:
    name: "predictor"
    Screen:
        BackgroundLayout:
            MDRectangleFlatButton:
                text: "Back"
                background_color: 0.2, 0.2, 0.2, 1  # Dark gray button
                size_hint: None, None
                size: root.width * 0.1, root.height * 0.05
                pos_hint: {"x": 0.05, "y": 0.9}
                on_release: app.root.current = "home"
            MDBoxLayout:
                orientation: "vertical"
                pos_hint: {"center_x": 0.5, "y": 0.5}
                ScrollView:
                    id: symptom_scroll
                    size_hint: (1, None)
                    size: (root.width * 0.5, root.height * 0.4)
                    MDGridLayout:
                        id: symptom_container
                        cols: 1
                        size_hint_y: None
                        height: self.minimum_height
            MDRectangleFlatButton:
                text: "Predict"
                background_color: 1, 0, 0, 1  # Red button
                on_press: root.predict_disease()
                size_hint: None, None
                size: root.width * 0.2, root.height * 0.05
                pos_hint: {"x": 0.05, "y": 0.4}
            MDBoxLayout:
                orientation: "vertical"
                pos_hint: {"center_x": 0.62, "y": 0.05}
                ScrollView:
                    id: disease_scroll
                    size_hint: (1, None)
                    size: (root.width * 0.2, root.height * 0.3)
                    MDLabel:
                        id: disease_label
                        text: ""
                        size_hint_y: None
                        height: self.texture_size[1]

<SymptomsWindow>:
    name: "symptoms"
    # id: symptom_window
    BackgroundLayout:
        MDRectangleFlatButton:
            text: "Back"
            background_color: 0.2, 0.2, 0.2, 1  # Dark gray button
            size_hint: None, None
            size: root.width * 0.1, root.height * 0.05
            pos_hint: {"x": 0.05, "y": 0.9}
            on_release: app.root.current = "home"
        MDTextField:
            id: disease
            hint_text: "Enter a Disease"
            icon_right: "magnify"
            icon_right_color: app.theme_cls.primary_color
            on_text_validate: root.find_info(disease.text)
            size_hint: None, None
            size: 200, 48 
            pos_hint: {"center_x": 0.5, "center_y": 0.8}

        MDBoxLayout:
            orientation: "vertical"
            pos_hint: {"x": 0.3, "center_y": 0.67}
            ScrollView:
                id: symptoms_scroll
                size_hint: (None, None)
                size: (root.width * 0.5, root.height * 0.5)
                MDLabel:
                    id: all_info
                    text: ""
                    size_hint_y: None
                    height: self.texture_size[1]
        
<SchedulerWindow>:
    name: "scheduler"
    BackgroundLayout:
        MDRectangleFlatButton:
            text: "Back"
            background_color: 0.2, 0.2, 0.2, 1  # Dark gray button
            size_hint: None, None
            size: root.width * 0.1, root.height * 0.05
            pos_hint: {"x": 0.05, "y": 0.9}
            on_release: app.root.current = "home"

        MDBoxLayout:
            orientation: 'vertical'
            spacing: "12dp"
            size_hint_y: None
            height: "200dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDTextField:
                id: date_input
                hint_text: "Date"
                on_focus: root.show_date_picker()
                size_hint: None, None
                size: 150, 48  # Adjust the size as needed
                pos_hint: {"center_x": 0.5}
            MDTextField:
                id: time_input
                hint_text: "Time(HH:MM)"
                on_focus: root.show_time_picker()
                size_hint: None, None
                size: 150, 48  # Adjust the size as needed
                pos_hint: {"center_x": 0.5}
            MDTextField:
                id: name_input
                hint_text: "Name"
                size_hint: None, None
                size: 150, 48  # Adjust the size as needed
                pos_hint: {"center_x": 0.5}

        MDRaisedButton:
            text: "Add Appointment"
            size_hint: None, None
            size: 200, 48
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            on_release: root.show_add_appointment_popup()

        MDLabel:
            id: appointments_label
            text: 'Appointments:'
            color :0,0,1,1
            size_hint: None, None
            size: self.texture_size[0], self.texture_size[1]
            pos_hint: {"center_x": 0.5, "center_y": 0.1}


<HospitalWindow>:
    name: "hospital"
    Screen:
